{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/glad.c",
                "${workspaceFolder}/lib/libglfw.3.dylib",
                // "${workspaceFolder}/lib/libGLEW.2.2.0.dylib",
                "-framework",
                "OpenGL",
                "-o",
                "${workspaceFolder}/build/myapp",
                "-rpath",
                "/Users/ishan/Documents/OpenGL/Coding/GameTest/lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/clang++",
        }
    ]
}